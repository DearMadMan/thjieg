<!DOCTYPE html>
<html lang="en">

<head>
    <title>Matrix Admin</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="{$vp}/css/bootstrap.min.css" />
    <link rel="stylesheet" href="{$vp}/css/bootstrap-responsive.min.css" />
    <link rel="stylesheet" href="{$vp}/css/fullcalendar.css" />
    <link rel="stylesheet" href="{$vp}/css/matrix-style.css" />
    <link rel="stylesheet" href="{$vp}/css/matrix-media.css" />
    <link rel="stylesheet" href="{$vp}/css/select2.css">
    <link rel="stylesheet" href="{$vp}/css/uniform.css">
    <link href="{$vp}/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="{$vp}/css/jquery.gritter.css" />
    <link href='{$vp}/css/google.css' rel='stylesheet' type='text/css'>
    <script src="{$vp}/js/jquery.min.js"></script>
    <script src="{$vp}/js/jquery.ui.custom.js"></script>
    <script src="{$vp}/js/jquery.uniform.js"></script>
    <script src="{$vp}/js/bootstrap.min.js"></script>
    <script src="{$vp}/js/jquery.flot.min.js"></script>
    <script src="{$vp}/js/jquery.flot.resize.min.js"></script>
    <script src="{$vp}/js/matrix.js"></script>
    <script src="{$vp}/js/select2.min.js"></script>

    <link rel="stylesheet" href="{$vp}/css/datepicker.css" />
    <script src="{$vp}/js/bootstrap-datepicker.js"></script>
    <script src="{$vp}/js/goods.js"></script>

</head>

<body>
    {include file='header.mad'} {include file='menu.mad'}
    <!--main-container-part-->
    <div id="content">
        {include file="breadcrumbs.mad"}






        <div class="container-fluid">

<div class="widget-box">
<div class="widget-title">
<span class="icon"><i class="icon-bookmark"></i></span>
<h5>全局设置</h5>
</div>
</div>


            <div class="row-fluid">
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon"> <i class="icon-align-justify"></i>
                        </span>
                        <h5>文章列表</h5>


                    </div>
                    <div class="widget-content nopadding">

                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>文章ID</th>
                                    <th>文章分类</th>
                                    <th>文章标题</th>
                                    <th>发布时间</th>
                                    <th>编辑</th>
                                </tr>
                            </thead>
                            <tbody>
                                {foreach $goods_list as $v}
                                <tr>
                                    <td>{$v.article_id}</td>
                                    <td>{$v.type_name}</td>
                                    <td>{$v.title}</td>
                                    <td>{$v.add_time|date_format:"%Y-%m-%d"}</td>
                                    <td>
                                        <a href="index.php?act=goods_edit&goods_id={$v.article_id}"> <i class="icon-edit"></i>
                                            编辑
                                        </a>
                                        &nbsp;
                                        <a href="goods.php?act=goods_delete&goods_id={$v.article_id}" onclick="if(!confirm('确定要删除该数商品吗'))return false;">
                                            <i class="icon-trash"></i>
                                            删除
                                        </a>
                                    </td>
                                </tr>
                                {/foreach}
                            </tbody>
                        </table>

                    </div>

                </div>
            {if $more}
                <div class="dataTables_paginate fg-buttonset ui-buttonset fg-buttonset-multi ui-buttonset-multi paging_full_numbers" id="DataTables_Table_0_paginate">
                    <a tabindex="0" class="first ui-corner-tl ui-corner-bl fg-button ui-button ui-state-default {if $now eq 1}ui-state-disabled{/if}" id="DataTables_Table_0_first" href="{if $now eq 1}javascript:;{else}index.php?act=goods_list&pageNow=1{/if}"  >First</a>
                    <a tabindex="0" class="previous fg-button ui-button ui-state-default" id="DataTables_Table_0_previous {if $now eq 1}ui-state-disabled{/if}" href="{if $now eq 1}javascript:;{else}index.php?act=goods_list&pageNow={$pre}{/if}">Previous</a>
                    <span>
                    {if $last lte 5}
                        {for $foo=1 to 5}
                          <a href="{if $foo eq $now}javascript:;{else} index.php?act=goods_list&pageNow={$foo}{/if}" tabindex="0" class="fg-button ui-button ui-state-default {if $foo eq $now}ui-state-disabled{/if} ">{$foo}</a>
                        {/for}
                        {else}
                        {if $last-$now>=4}
                          {for $foo=$now to $now+4}
                          <a href="{if $foo eq $now}javascript:;{else} index.php?act=goods_list&pageNow={$foo}{/if}" tabindex="0" class="fg-button ui-button ui-state-default {if $foo eq $now}ui-state-disabled{/if} ">{$foo}</a>
                          {/for}
                        {else}
                          {for $foo=$last-4 to $last}
                          <a href="{if $foo eq $now}javascript:;{else} index.php?act=goods_list&pageNow={$foo}{/if}" tabindex="0" class="fg-button ui-button ui-state-default {if $foo eq $now}ui-state-disabled{/if} ">{$foo}</a>
                          {/for}
                        {/if}
                    {/if}


                    </span>
                    <a tabindex="0" class="next fg-button ui-button ui-state-default  {if $now eq $last}ui-state-disabled{/if}" id="DataTables_Table_0_next" href="{if $now eq $last}javascript:;{else}index.php?act=goods_list&pageNow={$next}{/if}">Next</a>
                    <a tabindex="0" class="last ui-corner-tr ui-corner-br fg-button ui-button ui-state-default {if $now eq $last}ui-state-disabled{/if}" id="DataTables_Table_0_last"  href="{if $now eq $last}javascript:;{else}index.php?act=goods_list&pageNow={$last}{/if}">Last</a>
                </div>
    {/if}
            </div>

        </div>

    </div>

    <!--end-main-container-part-->{include file='footer.mad'}</body>

</html>