</head>

<body>

    {include file='header.mad'} {include file='menu.mad'}
    <!--main-container-part-->
    <div id="content">

        {include file="breadcrumbs.mad"}



        <div class="container-fluid">

            <div class="row-fluid">
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon">
                            <i class="icon-align-justify"></i>
                        </span>
                        <h5>分类列表</h5>
                    </div>
                    <div class="widget-content nopadding">


                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>分类ID</th>
                                    <th>分类名称</th>
                                    <th>编辑</th>
                                </tr>
                            </thead>
                            <tbody>
                                {foreach $categroy_list as $v}
                                <tr>
                                    <td>
                                        {$v.article_type_id}
                                    </td>
                                    <td> {$v.type_name}</td>
                                     <td> <a href="index.php?act=goods_categroy_edit&article_type_id={$v.article_type_id}"><i class="icon-edit"></i> 编辑</a>&nbsp; <a href="goods.php?act=goods_categroy_delete&categroy_id={$v.article_type_id}" onclick="if(!confirm('确定要删除该数商品吗'))return false;"><i class="icon-trash"></i> 删除</a></td>
                                </tr>
                                {/foreach}
                            </tbody>
                        </table>


                    </div>

                </div>
            </div>

        </div>

    </div>


    <!--end-main-container-part-->

    {include file='footer.mad'}










